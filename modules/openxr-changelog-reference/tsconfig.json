{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
  ],
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "target": "ES5",
    "module": "ESNext",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES2019"
    ]
  }
}